<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <TableView fx:id="tableViewGradovi" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colGradId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colGradNaziv" prefWidth="100.0" text="%nazivT" />
                <TableColumn fx:id="colGradStanovnika" prefWidth="90.0" text="%stanovnika" />
                <TableColumn fx:id="colGradDrzava" prefWidth="185.0" text="%drzavaT" />
            </columns>
        </TableView>
    </center>
    <right>
        <VBox prefHeight="200.0" prefWidth="120.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <Button fx:id="btnDodajGrad" mnemonicParsing="false" onAction="#actionDodajGrad" prefWidth="Infinity" text="%dodaj_grad" />
            <Button fx:id="btnDodajDrzavu" mnemonicParsing="false" onAction="#actionDodajDrzavu" prefWidth="Infinity" text="%dodaj_drzavu" />
            <Button fx:id="btnIzmijeniGrad" mnemonicParsing="false" onAction="#actionIzmijeniGrad" prefWidth="Infinity" text="%izmijeni_grad" />
            <Button fx:id="btnObrisiGrad" mnemonicParsing="false" onAction="#actionObrisiGrad" prefWidth="Infinity" text="%obrisi_grad" />
         <Button fx:id="btnStampa" layoutX="15.0" layoutY="108.0" mnemonicParsing="false" onAction="#prikaziIzvjestaj" prefWidth="Infinity" text="%stampa" />
         <Button fx:id="btnJezik" layoutX="15.0" layoutY="139.0" mnemonicParsing="false" onAction="#izaberiJezik" prefWidth="Infinity" text="%jezik" />
        </VBox>
    </right>
</BorderPane>
